!!!5
%html{class:"no-js", lang:"es"}
  %head
    %meta{charset:"utf-8"}
    %title Evolution | La evolucion en recurso humano
    %meta{name:"description", content:"Evoluciona con nosotros como el mejor recurso humano de la era moderna."}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1"}
    %meta{:"data-name" => "image-counter", content:"#{gallery_images.size - 1}"}
    %link{href:"https://fonts.googleapis.com/css?family=Vollkorn", rel:"stylesheet"}
    %link{rel:"stylesheet", href:"css/normalize.css"}
    %link{rel:"stylesheet", href:"css/bootstrap.css"}
    %link{rel:"stylesheet", href:"https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css"}
    %link{rel:"stylesheet", href:"css/style.css"}
    %script{src:"js/vendor/modernizr-2.8.3.min.js"}
  %body
    ="<!--[if lte IE 9]>"
    %p{class:"browserupgrade"}
      You are using an
      %strong outdated browser. Please
      %a{href:"https://browsehappy.com/"}
        upgrade your browser</a> to improve your experience and security.
    ="<![endif]-->"
    .video-container
      %video{autoplay:true, loop:true, width:"1280", height:"720", poster:"./videos/images/evolution.jpg"}
        %source{src:"./videos/mp4/evolution.mp4", type:"video/mp4"}
        %source{src:"./videos/webm/evolution.webm", type:"video/webm"}
    .row.full-height.middle-xs.center-xs.relative.up
      .col-xs-12
        .box.red-text
          %img{src:"./img/evolution.svg", width:"200"}
          %h1.fuente.title.no-margin Headhunting & Consulting
          %p.sub-title Experiencia en el manejo de recursos humanos
      %nav.fixed.top.right.red-text.navigation#navigation
        -menu = ["Inicio", "Nosotros", "Headhunting", "Recursos humanos", "Contacto"]
        %ul.list-inline
          -menu.each do |item|
            %li
              %a{}= item
      .absolute.black.large-padding.white-text.full-width#description
        .row.middle-xs.center-xs
          .col-xs-7.col-sm-6.midium
            Talento adecuado en el puesto correcto
          .col-xs.hidden#sticky-navigation
            .box
              %nav.text-rigth.navigation
                %ul.list-inline
                  -menu.each do |item|
                    %li
                      %a{}= item
    .text-center.relative#menu
      .absolute.white#menu-title
        %h2.fuente.titile Evolution
      -menu_photos = [{name: "Capacitación",image: "club-sandwich",pricing: "10.00"},
      {name:"Outplacement",image: "hamburger",pricing: "10.00"},
      {name: "Administracion de cambio",image: "hot-cakes",pricing: "10.00"},
      {name: "Evaluacion clima laboral",image: "panini",pricing: "10.00"},
      {name: "Reingenieria de la organizacion",image: "papas",pricing: "10.00"},
      {name: "Evaluacion 360°",image: "combo",pricing: "10.00"},
      {name: "Call Center",image: "club-sandwich",pricing: "10.00"},
      {name: "Mensajeria especializada",image: "hamburger",pricing: "10.00"}]
      .row
        -menu_photos.each do |foto|
          .col-md-4.col-lg-3.col-sm-6.col-xs-12.food{style:"background-image:url(img/food/#{foto[:image]}-thumb.jpg)"}
            .screen
              .row.middle-xs.full-height
                .col-lg-12.white-text
                  %h3.fuente= foto[:name]
                  %p.no-margin= foto[:pricing]
    #gallery
      .inner
        -gallery_images.each do |image|
          .image{style:"background-image:url(img/food/#{image})"}

    %script{src:"http://code.jquery.com/jquery-3.0.0.js", integrity:"sha256-jrPLZ+8vDxt2FnE1zvZXCkCcebI/C8Dt5xyaQBjxQIo=", crossorigin:"anonymous"}

    %script
      window.jQuery || document.write("<script src='/js/vendor/jquery-1.12.4.min.js'><\/script>")
    %script{src:"js/main.js"}
